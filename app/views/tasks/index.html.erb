<div class="container">
<h1>This is Tasks Index page </h1>
<%= link_to 'Add a new task', new_task_path, class: "text-decoration-none" %>

<% @tasks.each do |task| %>
  <div class="form-check">
    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" <%= "checked" if task.completed%>>
    <label class="form-check-label" for="flexCheckDefault"></label>
    <%= link_to task.title, task_path(task), class: "text-decoration-none text-black" %> [<%= link_to 'Edit', edit_task_path(task) %>]
     [<%= link_to 'Delete', tasks_path(task),
   data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }  %>]
  </div>
<% end %>
</div>
