<div class="container">
<h1>Add a new task</h1>
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :details %>
  <%= f.text_field :details, class: 'form-control' %>
  <%= f.submit "Add task", class: 'btn btn-primary mt-3' %>
<% end %>
</div>
